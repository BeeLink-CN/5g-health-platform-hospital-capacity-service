{
  "name": "5g-health-platform-hospital-capacity-service",
  "version": "1.0.0",
  "description": "Hospital bed/ICU capacity service for 5G Health Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "typecheck": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint src --ext .ts",
    "verify": "npm run typecheck && npm run test && npm run build",
    "migrate": "ts-node src/db/migrate.ts",
    "pretest": "cross-env DB_USER=postgres PGUSER=postgres PGPASSWORD=postgres PGDATABASE=hospital_capacity PGHOST=localhost PGPORT=5432 npm run migrate"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "nats": "^2.19.0",
    "pg": "^8.11.3",
    "pino": "^8.19.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^10.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}